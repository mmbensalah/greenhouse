<!DOCTYPE html>
<html>
  <head>
    <title>Greenhouse</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      <%= "Logged in as #{current_user.username}" %> | <%= link_to 'Home', root_path %> | <%= link_to 'View all plants', plants_path %>
      |<%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Home', root_path %> | <%= link_to 'View all plants', plants_path %> |
      <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
    <% end %>

    <% if notice %>
      <%= notice %>
	  <% end %>

	  <% if alert %>
      <%= alert %>
	  <% end %>

    <%= yield %>

  </body>
</html>
